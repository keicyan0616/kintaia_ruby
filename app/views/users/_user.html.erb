<li>
  <!-- ユーザー名表示 -->
  <p><%= user.name %></p>
    
  <!-- 削除ボタン処理-->
  <div class = "btn-delete">
    <%= link_to "削除", user, method: :delete, data: { confirm: "削除してよろしいですか?"}, class: "btn btn-primary" %>
  </div>
  
  <!-- 編集ボタン処理 -->
  <div class="panel-heading"> 
    <div class="panel panel-default collaps">
      <a href="#link<%= user.id %>" data-toggle="collapse" class="btn btn-primary btn-edit">編集</a>
    </div>
  </div>
  
  <div id= "link<%= user.id %>" class="collapse">
    <% @user = User.find(user.id) %>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: @user %>
  
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
  
      <%= f.label :affiliation %>
      <%= f.text_field :affiliation, class: 'form-control' %>
      
      <%= f.label :employer_number, "社員番号" %>
      <%= f.text_field :employer_number, class: 'form-control' %>
  
      <%= f.label :uid, "カードID" %>
      <%= f.text_field :uid, class: 'form-control' %>
      
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
  
      <%= f.label :basic_work_time, "基本勤務時間" %>
      <%= f.time_field :basic_work_time, class: 'form-control' %>
      
      <%= f.label :designated_work_start_time, "指定勤務開始時間" %>
      <%= f.time_field :designated_work_start_time, class: 'form-control' %>
  
      <%= f.label :designated_work_end_time, "指定勤務終了時間" %>
      <%= f.time_field :designated_work_end_time, class: 'form-control' %>
      
      <br>
      <%= f.submit "編集する", class: "btn btn-primary btn-do-edit" %>
    <% end %> 
  </div>
</li>